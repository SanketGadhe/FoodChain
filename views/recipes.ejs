<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Suggestions | FoodChain</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .bg-gradient-custom {
            background: linear-gradient(135deg, #22c55e, #059669);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Header Section -->
    <header class="bg-gradient-custom text-white py-12 shadow-lg">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-4xl md:text-6xl font-bold mb-2">Recipe Suggestions</h1>
            <p class="text-lg md:text-xl opacity-90">Make delicious meals with your expiring ingredients</p>
        </div>
    </header>

    <!-- Recipes Grid -->
    <main class="container mx-auto px-6 py-12 flex-grow">
        <div class="flex gap-5">
            <% recipes.forEach(function(recipeData) { %>
                <div class="bg-white w-1/2 rounded-lg shadow-md p-6 transform transition duration-300 hover:shadow-xl">
                    <h2 class="text-xl font-semibold text-gray-800 mb-3">
                        Recipe for <span class="text-green-600"><%= recipeData.productName %></span>
                    </h2>
                    <div class="text-gray-700">
                        <div>
                            <strong class="block mb-1 text-gray-900">Recipe Name:</strong>
                            <p><%= recipeData.recipe.name %></p>
                        </div>
                        <div class="mt-4">
                            <strong class="block mb-1 text-gray-900">Ingredients:</strong>
                            <ul class="list-disc list-inside pl-2">
                                <% recipeData.recipe.ingredients.forEach(function(ingredient) { %>
                                    <li><%= ingredient %></li>
                                <% }); %>
                            </ul>
                        </div>
                        <div class="mt-4">
                            <strong class="block mb-1 text-gray-900">Instructions:</strong>
                            <p class="whitespace-pre-wrap"><%= recipeData.recipe.instructions %></p>
                        </div>
                        <div class="mt-4">
                            <span><strong>Cooking Time:</strong> <%= recipeData.recipe.cookingTime %></span><br>
                            <span><strong>Difficulty:</strong> <%= recipeData.recipe.difficulty %></span><br>
                            <span><strong>Servings:</strong> <%= recipeData.recipe.servings %></span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Back Button -->
        <div class="mt-12 text-center">
            <a href="/read/inventory" 
               class="inline-flex items-center px-5 py-3 bg-gradient-custom text-white font-medium rounded-lg hover:opacity-90 transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Inventory
            </a>
        </div>
    </main>

</body>
</html>
